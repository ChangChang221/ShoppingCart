@model IEnumerable< Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr >
            <th>
                Id
            </th>
            <th>
               Role
            </th>
            <th>
                Users
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)

        {
        <tr>
            <td>
                @role.Id
            </td>
            <td>
                @role.Name
            </td>
            <td user-role="@role.Id">
                users for this role
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                <a class="confirmDeletion" asp-action="Delete" asp-route-id="@role.Id">Details</a> |

            </td>
        </tr>
               
            
        }
    </tbody>
</table>

